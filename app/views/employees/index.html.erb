<p id="notice"><%= notice %></p>

<h1>Empleados</h1>

<%= link_to 'Nuevo empleado', new_employee_path %>
<br />
<br />
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre completo</th>
      <th scope="col">Título profesional</th>
      <th scope="col">Subsidiaria</th>
      <th scope="col">Departamento</th>
      <th scope="col">Moneda</th>
      <th scope="col">Telefono</th>
      <th scope="col">Fecha de contratación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.jobTitle %></td>
        <td><%= employee.subsidiary %></td>
        <td><%= employee.department %></td>
        <td><%= employee.currency %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.dateOfHire %></td>
        <td><%= link_to 'Más detalles', employee %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>