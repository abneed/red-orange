<p id="notice"><%= notice %></p>

<h1>Inventario de artículos</h1>

<%= link_to 'Nuevo artículo', new_item_path %>
<br>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID Interno</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Detalles', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Eliminar', item, method: :delete, data: { confirm: '¿Desea realmente eliminar el artículo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= bar_chart Item.all.group(:name).sum(:quantity) %>