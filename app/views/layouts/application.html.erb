<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/meta_tags' %>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
    <%= render 'layouts/xml_generator' %>
    <%= render 'layouts/dark_mode' %>
  </head>

  <body id="body" class="light-mode">
  <%= render 'layouts/header' %>
